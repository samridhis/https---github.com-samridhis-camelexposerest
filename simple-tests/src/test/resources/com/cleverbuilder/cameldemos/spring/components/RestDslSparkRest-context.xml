<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring-3.0.0.xsd
    ">

  <bean id="simpleFileFilter"
        class="com.cleverbuilder.cameldemos.beans.SimpleFileFilter"/>

  <camelContext xmlns="http://camel.apache.org/schema/spring">

    <restConfiguration component="spark-rest"
                       host="localhost"
                       port="8080"/>

    <rest path="/testing">
      <get>
        <to uri="direct:get"/>
      </get>
      <post>
        <route>
          <log message="Received a POST request"/>
          <to uri="file:target/output/customers"/>
          <setBody>
            <constant>Thanks!</constant>
          </setBody>
        </route>
      </post>
    </rest>

  </camelContext>

</beans>
